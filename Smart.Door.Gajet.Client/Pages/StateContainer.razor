@page "/state-container1"
@implements IDisposable
@inject Smart.Door.Gajet.Client.Infrastructure.StateContainer StateContainer2

<h1>State Container component</h1>

<p>State Container component Property: <b>@StateContainer2.Property</b></p>

<p>
    <button @onclick="ChangePropertyValue">
        Change the Property from the State Container component
    </button>
</p>

<Nested />

@code {
    protected override void OnInitialized()
    {
        StateContainer2.OnChange += StateHasChanged;
    }

    private void ChangePropertyValue()
    {
        StateContainer2.Property =
            $"New value set in the State Container component: {DateTime.Now}";
    }

    public void Dispose()
    {
        StateContainer2.OnChange -= StateHasChanged;
    }
}